{% extends 'admin.html.twig' %}

{% block body %}
   <section class="card">
        <div class="card-block">
            <h5 class="with-border m-t-lg">Creer votre CV</h5>

  <div class="row">
                {{ form_start(form, {'attr': {'class': 'form-control'}}) }}
					<div class="col-lg-4 float">
						<fieldset class="form-group">
							{{ form_row(form.nomCv) }}
						</fieldset>
					</div>
					<div class="col-lg-4 float">
						<fieldset class="form-group">
							{{ form_row(form.templateId) }}
						</fieldset>
					</div>

                    	<div class="col-lg-4 float">
						<fieldset class="form-group">
							{{ form_row(form.userId) }}
						</fieldset>
					</div>
                    <div class="clear"></div>
                    <div class="col-lg-12">
						<fieldset class="form-group">
							<input type="submit" value="Create" class="btn btn-inline"/>
						</fieldset>
					</div>
				
                    {{ form_end(form) }}
				</div>

        </div>
	</section>





{% endblock %}
{% block javascripts %}
    <script>
	$(document).ready( function () {
		$(".chosen-select").chosen({});
		$(".tmpl").change( function () {
			
			
		  $.ajax({
		   url: "{{ path('get_one') }}",
		   data: {
			  id: $(this).val()
		   },
		   error: function() {
			  $('#info').html('<p>An error has occurred</p>');
		   },
		   dataType: 'jsonp',
		   success: function(data) {
			  
		   },
		   type: 'POST'
		});
		});
	});

    </script>
	
        {% endblock %}
